	public static void displayTotal(double priceFinal) {
		
		
		DecimalFormat formatter = new DecimalFormat("##.00");
		String totalCost = formatter.format(priceFinal);
		System.out.println("Total Cost: $"+ totalCost);
	}
	
	
	
